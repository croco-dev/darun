{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "types": ["node"],
    "module": "commonjs",
    "target": "es2017",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
